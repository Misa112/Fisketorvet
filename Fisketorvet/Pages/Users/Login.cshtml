@page
@model Fisketorvet.Pages.Users.LoginModel
@{
}
<div class="container">
    <div class="row justify-content-center pt-2">
        <div class="col-sm-4 py-4 login-box">
            <div>
                <form method="post">
                    <div class="form-group">
                        <label class="col-form-label-sm mb-0" asp-for="Username">User Name:</label>
                        <input class="form-control" type="email" asp-for="Username" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label-sm mb-0" asp-for="Password">Password</label>
                        <input class="form-control" type="password" asp-for="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col mt-3 text-center">
                            <input type="submit" value="Log in" class="btn btn-dark text-light" />
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col text-center">
                            <span>You are not registered yet? Sign-up now:</span>
                        </div>
                    </div>
                    <div class="row mt-3 justify-content-center">
                        <div class="col text-center">
                            <a asp-page="/Customer/CreateCustomer" class="btn btn-outline-dark">Sign up</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>