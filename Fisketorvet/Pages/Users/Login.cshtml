@page
@model Fisketorvet.Pages.Users.LoginModel
@{
}
<div class="container">
    <div class="row justify-content-center pt-2">
        <div class="col-sm-4 py-4 login-box">
            <div>
                <form method="post">
                    <div class="form-group">
                        <label class="col-form-label-sm mb-0" asp-for="@Model.CustomerViewModel.Email">Email:</label>
                        <input class="form-control" type="email" asp-for="@Model.CustomerViewModel.Email" />
                        <span asp-validation-for="@Model.CustomerViewModel.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label-sm mb-0" asp-for="@Model.CustomerViewModel.Password">Password</label>
                        <input class="form-control" type="password" asp-for="@Model.CustomerViewModel.Password" />
                        <span asp-validation-for="@Model.CustomerViewModel.Password" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col mt-3 text-center">
                            <input class="btn btn-primary" type="submit" value="Log in"> 
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col text-center">
                            <span>You are not registered yet? Sign-up now:</span>
                        </div>
                    </div>
                    <div class="row mt-3 justify-content-center">
                        <div class="col text-center">
                            <a asp-page="../Customers/CreateCustomer" ><button type="button" class="btn btn-success">Sign up</button></a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>