@page
@model Fisketorvet.Pages.Stores.AllStoresModel
@{
    ViewData["Title"] = "All Stores";
}

<h1>All Stores</h1>

<p>
    <a asp-page="CreateStore">Create New Store</a>
</p>

<form>
    <p>
        Search: <input type="text" asp-for="FilterCriteria" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th> Name </th>
            <th> Contact </th>
            <th> Image </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var store in Model.Stores)
        {
        <tr>
            <td>@store.Value.StoreName</td>
            <td>@store.Value.TelContact</td>
            <td>
                <img src="~/Images/StoresImages/@store.Value.ImageName" width="130" height="65">
            </td>
            <td>
                <p>
                    <a asp-page="EditStore" asp-route-id="@store.Key">Edit</a> |
                    <a asp-page="DeleteStore" asp-route-id="@store.Key">Delete</a>
                </p>
            </td>
        </tr>
        }
    </tbody>
</table>
