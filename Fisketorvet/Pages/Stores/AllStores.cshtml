<table class="table table-striped table-dark">
    <thead>
    <tr>
        <th scope="col">Name</th>
        <th scope="col">Offer</th>
        <th scope="col">Contact</th>
        <th scope="col">Image</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var store in Model.Stores)
        {
        <tr>
            <td>@store.StoreName</td>
            <td>@store.Offer</td>
            <td>@store.TelContact</td>
            <td>
                <img src="~/Images/StoresImages/@store.ImageName" width="130" height="65">
            </td>
            <td>
                <p>
                    <a asp-page="ProductsOfStore" asp-route-storename="@store.StoreName"><button type="button" class="btn btn-outline-info">Product of Store</button></a> |
                    <a asp-page="DeleteStore" asp-route-id="@store.StoreId"><button type="button" class="btn btn-outline-danger">Delete</button></a>            
            </p>
            </td>
        </tr>
        }
    </tbody>
</table>