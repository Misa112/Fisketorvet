@page
@model Fisketorvet.Pages.Customers.CreateCustomerModel
@{
    ViewData["Title"] = "Create Customer";
}


<h1>Create Customer</h1>

<form method="post">

    <div class="form-group">
        <label asp-for="@Model.Customer.CustomerId" class="control-label"> Customer Id</label>
        <input asp-for="@Model.Customer.CustomerId" class="form-control" />
        <span asp-validation-for="@Model.Customer.CustomerId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Customer.Name" class="control-label">Name</label>
        <input asp-for="@Model.Customer.Name" class="form-control" />
        <span asp-validation-for="@Model.Customer.Name" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.Customer.Address" class="control-label">Address</label>
        <input asp-for="@Model.Customer.Address"  class="form-control">
        <span asp-validation-for="@Model.Customer.Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Customer.PhoneNumber" class="control-label">Phone Number</label>
        <input asp-for="@Model.Customer.PhoneNumber" class="form-control">
        <span asp-validation-for="@Model.Customer.PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Customer.Email" class="control-label">Email Address </label>
        <input asp-for="@Model.Customer.Email" class="form-control" />
        <span asp-validation-for="@Model.Customer.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>