    ViewData["Title"] = "CreateCustomer";
}


<h1>Create User</h1>

<form method="post">

    <div asp-validation-summary="None " class="text-danger">
    </div>

    @*<div class="form-group">
            <label asp-for="@Model.Customer.CustomerId" class="control-label"> Customer Id</label>
