    <div class="form-group">
        <label asp-for="@Model.CustomerViewModel.Name" class="control-label">Name</label>
        <input asp-for="@Model.CustomerViewModel.Name" class="form-control" />
        <span asp-validation-for="@Model.CustomerViewModel.Name" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.CustomerViewModel.Address" class="control-label">Address</label>
        <input asp-for="@Model.CustomerViewModel.Address" class="form-control">
        <span asp-validation-for="@Model.CustomerViewModel.Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.CustomerViewModel.PhoneNumber" class="control-label">Phone Number</label>
        <input asp-for="@Model.CustomerViewModel.PhoneNumber" class="form-control">
        <span asp-validation-for="@Model.CustomerViewModel.PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.CustomerViewModel.Email" class="control-label">Email Address </label>
        <input asp-for="@Model.CustomerViewModel.Email" class="form-control" />
        <span asp-validation-for="@Model.CustomerViewModel.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.CustomerViewModel.Password" class="control-label">Password</label>
        <input asp-for="@Model.CustomerViewModel.Password" class="form-control" type="password" />
        <span asp-validation-for="@Model.CustomerViewModel.Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.CustomerViewModel.ConfirmPassword" class="control-label">Confirm Password</label>
        <input asp-for="@Model.CustomerViewModel.ConfirmPassword" class="form-control" type="password" />
        <span asp-validation-for="@Model.CustomerViewModel.ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="@Model.CustomerViewModel.IsAdmin">Admin?:</label>
        <input class="border-dark" type="checkbox" asp-for="@Model.CustomerViewModel.IsAdmin">
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>